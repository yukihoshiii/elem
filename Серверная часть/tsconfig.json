{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "target": "es2017",
    "module": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": false,
    "allowJs": true,
    "checkJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "dist", "build", ".git", ".vscode", "storage"]
}

